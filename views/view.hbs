<div class="container">
  <div class="row">
          {{#each results}}
    <div class="card col-sm-4">
      <img src="{{ thumbnail }}">
        <h3>{{ title }}</h3>
        <p>Category | {{name}}</p>
        <a href="/video/{{ id }}"><button>Play</button></a>
    </div>
    
    {{/each}}
