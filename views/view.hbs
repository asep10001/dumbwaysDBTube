      <!-- Modal Add video-->
      <form action="/add_video" method="post">
        <div class="modal fade" id="myModalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
         <div class="modal-dialog" role="document">
           <div class="modal-content">
             <div class="modal-header">
               <h5 class="modal-title" id="exampleModalLabel">Add Video</h5>
               <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                 <span aria-hidden="true">&times;</span>
               </button>
             </div>
             <div class="modal-body">       
               <div class="form-group">
                   <input type="text" name="title" class="form-control" placeholder="The Video Title" required>
               </div>
 
               <div class="form-group">
                   <input type="text" name="attache" class="form-control" placeholder="who is the attache" required>
               </div>
               <div class="form-group">
                   <input type="text" name="thumbnail" class="form-control" placeholder="url thumbnail" required>
               </div>
               <div class="form-group">
                   <input type="text" name="name" class="form-control" placeholder="genre" required>
               </div>
               <div class="form-group">
                   <input type="text" name="url_video" class="form-control" placeholder="video url" required>
               </div>
             </div>
             <div class="modal-footer">
               <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
               <button type="submit" class="btn btn-primary">Save</button>
             </div>
           </div>
         </div>
        </div>
     </form>

 <!-- Modal Add kabupaten-->
      <form action="/add_category" method="post">
        <div class="modal fade" id="myModalAdd1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
         <div class="modal-dialog" role="document">
           <div class="modal-content">
             <div class="modal-header">
               <h5 class="modal-title" id="exampleModalLabel">Add Category</h5>
               <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                 <span aria-hidden="true">&times;</span>
               </button>
             </div>
             <div class="modal-body">       
               <div class="form-group">
                   <input type="text" name="name" class="form-control" placeholder="the Category name" required>
               </div>
             </div>
             <div class="modal-footer">
               <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
               <button type="submit" class="btn btn-primary">Save</button>
             </div>
           </div>
         </div>
        </div>
     </form>
