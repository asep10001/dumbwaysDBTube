        <a id="kembali" href="/">Kembali</a>
      </div>
    </div>
</div>



 <!-- Modal Update Video-->

   <form action="/update" method="post">
       <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Edit Video</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
            <div class="form-group">
                   <input type="text" name="title" class="title form-control" placeholder="title Video" required>
               </div>
 
               <div class="form-group">
                   <input type="text" name="attache" class="attache form-control" placeholder="attache" required>
               </div>
               <div class="form-group">
                   <input type="text" name="thumbnail" class="thumbnail form-control" placeholder="thumbnail" required>
               </div>              
              <div class="form-group">
                   <input type="text" name="category_id" class="category_id form-control" placeholder="category_id" required>
               </div>
            </div>
            <div class="modal-footer">
              <input type="hidden" name="id" class="id form-control">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Update</button>
            </div>
          </div>
        </div>
       </div>
  </form>

     <!-- Modal Delete Video-->
      <form id="add-row-form" action="/delete" method="post">
         <div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
               <div class="modal-content">
                   <div class="modal-header">
              <h5 class="modal-title" id="myModalLabel">Delete Video</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                   </div>
                   <div class="modal-body">
                      <strong>Are you sure to delete this video?</strong>
                   </div>
                   <div class="modal-footer">
                        <input type="hidden" name="id" class="form-control video_tb" required>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Delete</button>
                   </div>
                    </div>
            </div>
         </div>
     </form>
<script src="/assets/js/jquery-3.3.1.js"></script>
<script src="/assets/js/bootstrap.js"></script>
<script>
    $(document).ready(function(){
            //tampilkan data ke modal untuk edit
      $('#content').on('click','.edit',function(){
        var title = $(this).data('title');
        var attache = $(this).data('attache');
        var thumbnail = $(this).data('thumbnail');
        var name = $(this).data('name');
        var category_id= $(this).data('category_id');
        var id = $(this).data('id');
        $('#EditModal').modal('show');
        $('.id').val(id);
        $('.title').val(title);
        $('.attache').val(attache);
        $('.thumbnail').val(thumbnail);
        $('.name').val(name);
        $('.category_id').val(category_id);
        $('.id').val(id);
      });
            //tampilkan modal hapus record
            $('#content').on('click','.delete',function(){
        var id = $(this).data('id');
        $('#DeleteModal').modal('show');
        $('.Video_tb').val(id);
      });
 
    });
</script>
</body>